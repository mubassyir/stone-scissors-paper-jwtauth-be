<div class="card mt-3 mx-5">
    <h5 class="card-header">user</h5>
    <div class="card-body">
        <table class="table text-center">
            <thead>
              <tr>
                <th scope="col">user_id</th>
                <th scope="col">email</th>
                <th scope="col">password</th>
                <th scope="col">action</th>
              </tr>
            </thead>
            <tbody>
                <% for( let i = 0; i < user.length; i++ ) { %>
                    <tr>
                      <td><%= user[i].user_id %></td>
                      <td><%= user[i].email%></td>
                      <td><%= user[i].password %></td>
                      <td> 
                        <button class="btn btn-info" onclick="window.location.href='/form_user/<%= user[i].user_id %>'">Update</button>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDelete">
                          Delete
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Confirmation Delete</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                                Are you sure to delete?
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                <form action="/user_delete/<%= user[i].user_id %>" method="POST">
                                  <button class="btn btn-danger" type="hidden" name="_method" value="DELETE">Yes</button>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>
                      </td>
                    </tr>
                <% } %>
            </tbody>
          </table>
           <!-- Add Button -->
           <button type="button" class="btn btn-primary" data-toggle="modal"data-target="#biodataModals">Manual Add</button>
           <!--Biodata modals -->
           <div class="modal fade" id="biodataModals" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
             <div class="modal-dialog" role="document">
               <div class="modal-content">
                 <div class="modal-header">
                   <h5 class="modal-title" id="exampleModalLabel">Add User</h5>
                   <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                   </button>
                 </div>
                 <!-- Modals Body -->
                 <form class="modal-body" method="POST" action="/create_user">
                     <div class="form-group">
                         <label for="recipient-name" class="col-form-label">email :</label>
                         <input type="email" class="form-control" id="recipient-name" name="email">
                     </div>
                     <div class="form-group">
                        <label for="recipient-name" class="col-form-label">password:</label>
                        <input type="password" class="form-control" id="recipient-name" name="password">
                    </div>
                   <div class="modal-footer">
                     <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                     <button type="submit" class="btn btn-primary">Add</button>
                   </div>
                 </form>
                 </div>
               </div>
          </div>
    </div>
</div>