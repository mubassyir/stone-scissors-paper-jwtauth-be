
<div class="card mt-3 mx-5">
    <h5 class="card-header">History</h5>
        <div class="card-body ">
            <table class="table text-center">
                <thead>
                  <tr>
                    <th scope="col">history_id</th>
                    <th scope="col">user_id</th>
                    <th scope="col">result</th>
                    <th scope="col">action</th>
                  </tr>
                </thead>
                <tbody>
                    <% for( let i = 0; i < history.length; i++ ) { %>
                        <tr>
                          <td><%= history[i].history_id %></td>
                          <td><%= history[i].user_id%></td>
                          <td><%= history[i].result%></td>
                          <td> 
                            <button class="btn btn-info" onclick="window.location.href='/form_history/<%= history[i].history_id %>'">Update</button>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#historyDelete">
                              Delete
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="historyDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirmation Delete</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                  </div>
                                  <div class="modal-body">
                                    Are you sure to delete?
                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                    <!-- Yes -->
                                    <form action="/history_delete/<%= history[i].history_id %>" method="POST">
                                      <button class="btn btn-danger" type="hidden" name="_method" value="DELETE">Yes</button>
                                    </form>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </td>
                        </tr>
                    <% } %>
                </tbody>
              </table>
              <button type="button" class="btn btn-primary" data-toggle="modal"data-target="#historyModals">Manual Add</button>
              <!--history modals -->
              <div class="modal fade" id="historyModals" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Add History</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <!-- Modals Body -->
                    <form class="modal-body" method="POST" action="/create_history">
                        <div class="form-group">
                          <label for="recipient-name" class="col-form-label">user_id:</label>
                          <input type="number" class="form-control" id="recipient-name" name="user_id">
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">result :</label>
                            <input type="text" class="form-control" id="recipient-name" name="result">
                        </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                      </div>
                    </form>
                    </div>
                  </div>
             </div>
        </div>
   </div>
